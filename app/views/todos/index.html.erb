<% content_for :title, "Todos" %>
<div class="min-h-screen flex flex-col items-center bg-white">
  <section class="relative w-full">
    <%= image_tag "banner_desktop.svg", class: "hidden md:block w-full object-cover select-none pointer-events-none" %>
    <%= image_tag "banner_mobile.svg", class: "block md:hidden size-80 object-cover mx-auto select-none pointer-events-none" %>
    <div class="inset-0 flex items-center justify-center">
      <%= link_to "My Brag Document", brag_path, class: "inline-flex items-center justify-center rounded-2xl max-sm:rounded-xl bg-blue-700 px-6 py-3 m-3 text-white text-xl font-semibold shadow-md hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 max-sm:text-base" %>
    </div>
  </section>
  <section class="w-full max-w-2xl px-6 mt-10">
    <%= turbo_frame_tag "new_todo_form" do %>
      <%= render "form", todo: @todo %>
    <% end %>
  </section>
  <section class="w-full max-w-2xl px-6 mt-8">
    <h2 class="mb-3 text-lg max-sm:text-base font-semibold text-gray-800">
      Tasks to do
    </h2>
    <div id="todos">
      <%= turbo_frame_tag "todos" do %>
        <%= render partial: "todo", collection: @todos, as: :todo %>
      <% end %>
    </div>
  </section>
</div>
