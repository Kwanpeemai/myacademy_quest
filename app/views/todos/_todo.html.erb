<% done = todo.is_complete? %>
<div id="<%= dom_id(todo) %>" data-testid="todo-item-<%= todo.id %>" class="m-3 rounded-2xl max-sm:rounded-xl border border-sky-100 bg-white px-4 py-3 shadow-sm transition <%= done ? 'bg-gray-100 text-gray-500' : 'hover:shadow' %>">
  <div class="flex items-center gap-4">
    <%= form_with model: todo, method: :patch, data: { testid: "todo-toggle-form-#{todo.id}" } do |form| %>
      <%= form.hidden_field :is_complete, value: false %>
      <%= form.check_box :is_complete, { data: { testid: "todo-#{todo.id}-checkbox" }, class: "h-5 w-5 rounded border-gray-300 accent-blue-700", onchange: "this.form.requestSubmit()" }, true, false %>
    <% end %>
    <span class="flex-1 text-base max-sm:text-sm <%= 'line-through' if done %>" data-testid="todo-<%= todo.id %>-title">
      <%= todo.title %>
    </span>
    <%= button_to todo, method: :delete, data: { testid: "todo-#{todo.id}-delete" }, class: "inline-flex h-9 w-9 items-center justify-center rounded-lg text-gray-500 hover:bg-gray-100 hover:text-red-600" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6M9 7h6m-1-2a1 1 0 00-1-1h-2a1 1 0 00-1 1v2h4V5z"/>
      </svg>
    <% end %>
  </div>
</div>
