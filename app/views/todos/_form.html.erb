<%= form_with(model: todo, id:"new_todo_form", class: "w-full") do |form| %>
  <div class="flex items-center gap-3">
    <%= form.text_field :title, required: true, placeholder: "Add a new task", class: "flex-grow h-11 rounded-xl border border-gray-300 bg-white px-4 text-gray-800 shadow-sm focus:border-blue-400 focus:ring-2 focus:ring-blue-200" %>
    <%= button_tag type: "submit", class: "inline-flex h-11 w-11 items-center justify-center rounded-xl bg-blue-700 text-white shadow hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300", title: "Add task", aria: { label: "Add task" } do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
      </svg>
    <% end %>
  </div>
<% end %>
